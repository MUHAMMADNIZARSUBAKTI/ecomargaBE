# .env - Backend Environment Configuration
# Copy this file and rename to .env, then fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:5173

# Database Configuration (using JSON files for simplicity)
DB_TYPE=json
DATA_DIR=./data

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ecomarga.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Payment Gateway Configuration (if needed)
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
PAYMENT_API_KEY=your-payment-api-key

# E-Wallet API Configuration
DANA_API_URL=https://api.dana.id
OVO_API_URL=https://api.ovo.id
GOPAY_API_URL=https://api.gopay.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Google Maps API (for bank sampah locations)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Admin Configuration
ADMIN_EMAIL=admin@ecomarga.com
ADMIN_PASSWORD=admin123

# Development Settings
DEBUG=true
MOCK_PAYMENTS=true
MOCK_EWALLET=true