# .env.example - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =================================================================
# SERVER CONFIGURATION
# =================================================================
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:5173

# =================================================================
# POSTGRESQL DATABASE CONFIGURATION
# =================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecomarga
DB_USER=ecomarga_user
DB_PASSWORD=your_secure_password

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_CONNECTION_TIMEOUT=60000
DB_IDLE_TIMEOUT=30000
DB_SSL=false

# Test Database (optional)
DB_NAME_TEST=ecomarga_test

# =================================================================
# JWT CONFIGURATION
# =================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# =================================================================
# EMAIL CONFIGURATION
# =================================================================
# SMTP Settings (for notifications and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@ecomarga.com

# Email Templates
EMAIL_SUPPORT=support@ecomarga.com

# =================================================================
# FILE UPLOAD CONFIGURATION
# =================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/gif,image/webp

# Upload Limits
MAX_AVATAR_SIZE=2097152
MAX_SUBMISSION_PHOTOS=5
MAX_LOGO_SIZE=3145728

# =================================================================
# SECURITY SETTINGS
# =================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Password Requirements
MIN_PASSWORD_LENGTH=6
REQUIRE_STRONG_PASSWORD=true

# Session Settings
SESSION_TIMEOUT=3600000

# =================================================================
# PAYMENT GATEWAY CONFIGURATION
# =================================================================
# Payment Gateway Settings (if using external payment processor)
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# E-Wallet API Configuration
DANA_API_URL=https://api.dana.id
DANA_API_KEY=your-dana-api-key
OVO_API_URL=https://api.ovo.id
OVO_API_KEY=your-ovo-api-key
GOPAY_API_URL=https://api.gopay.com
GOPAY_API_KEY=your-gopay-api-key

# =================================================================
# EXTERNAL SERVICES
# =================================================================
# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# WhatsApp Business API (for notifications)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-api-token

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_CLIENT_ID=your-firebase-client-id

# =================================================================
# LOGGING SETTINGS
# =================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
DEBUG_SQL=false

# Log Rotation
MAX_LOG_SIZE=10485760
MAX_LOG_FILES=5

# =================================================================
# ADMIN CONFIGURATION
# =================================================================
ADMIN_EMAIL=admin@ecomarga.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrator

# Super Admin Settings
SUPER_ADMIN_EMAILS=admin@ecomarga.com,superadmin@ecomarga.com

# =================================================================
# APPLICATION SETTINGS
# =================================================================
# App Information
APP_NAME=EcoMarga
APP_VERSION=1.0.0
APP_DESCRIPTION=Bank Sampah Digital untuk Lingkungan yang Lebih Bersih

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistem sedang dalam maintenance. Silakan coba lagi nanti.

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SUBMISSIONS=true
ENABLE_WITHDRAWALS=true
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_VERIFICATION=false

# =================================================================
# BUSINESS LOGIC SETTINGS
# =================================================================
# Minimum & Maximum Limits
MIN_WITHDRAWAL_AMOUNT=50000
MAX_WITHDRAWAL_AMOUNT=1000000
MIN_SUBMISSION_WEIGHT=0.1
MAX_SUBMISSION_WEIGHT=1000

# Pricing & Fees
TRANSACTION_FEE_PERCENTAGE=0
WITHDRAWAL_FEE=0

# Environmental Impact Factors
CO2_REDUCTION_FACTOR=2.3
ENERGY_SAVING_FACTOR=1.5
WATER_SAVING_FACTOR=10

# Referral & Bonus System
REFERRAL_BONUS=5000
FIRST_SUBMISSION_BONUS=2000
ENABLE_REFERRAL_SYSTEM=true

# =================================================================
# LOCATION SERVICES
# =================================================================
# Service Area Settings
DEFAULT_CITY=Jakarta
DEFAULT_PROVINCE=DKI Jakarta
MAX_SERVICE_RADIUS=50
DEFAULT_SERVICE_RADIUS=15

# Coordinates for default location
DEFAULT_LATITUDE=-6.2088
DEFAULT_LONGITUDE=106.8456

# =================================================================
# NOTIFICATION SETTINGS
# =================================================================
# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WELCOME_EMAIL=true
ENABLE_SUBMISSION_EMAILS=true
ENABLE_PAYMENT_EMAILS=true

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=false
PUSH_NOTIFICATION_KEY=your-push-notification-key

# SMS Notifications (if using SMS service)
ENABLE_SMS_NOTIFICATIONS=false
SMS_API_URL=https://api.sms-service.com
SMS_API_KEY=your-sms-api-key

# =================================================================
# CACHING & PERFORMANCE
# =================================================================
# Redis Configuration (if using Redis for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Settings
CACHE_TTL=3600
ENABLE_QUERY_CACHE=false
ENABLE_RESPONSE_CACHE=false

# =================================================================
# MONITORING & ANALYTICS
# =================================================================
# Error Tracking (e.g., Sentry)
SENTRY_DSN=your-sentry-dsn

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id
ENABLE_ANALYTICS=false

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# =================================================================
# BACKUP & RECOVERY
# =================================================================
# Database Backup Settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================
# Development Only Settings
DEBUG=false
MOCK_PAYMENTS=true
MOCK_EWALLET=true
MOCK_EMAIL=false
MOCK_SMS=false

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_URL=/api-docs

# CORS Settings for Development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# =================================================================
# PRODUCTION SECURITY SETTINGS
# =================================================================
# Security Headers
ENABLE_SECURITY_HEADERS=true
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# API Rate Limiting (Production)
STRICT_RATE_LIMITING=false
API_KEY_REQUIRED=false
VALID_API_KEYS=key1,key2,key3

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret
ENABLE_WEBHOOK_SIGNATURE_VERIFICATION=true

# =================================================================
# THIRD-PARTY INTEGRATIONS
# =================================================================
# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Weather API (if needed for operational decisions)
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org

# Geolocation Services
GEOCODING_API_KEY=your-geocoding-api-key

# =================================================================
# TESTING CONFIGURATION
# =================================================================
# Test Environment Settings
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=ecomarga_test
TEST_DB_USER=ecomarga_user
TEST_DB_PASSWORD=password

# Test Data
ENABLE_TEST_DATA=false
TEST_USER_EMAIL=test@ecomarga.com
TEST_USER_PASSWORD=test123

# =================================================================
# MISCELLANEOUS
# =================================================================
# Timezone
TZ=Asia/Jakarta

# File Storage
STORAGE_TYPE=local
AWS_BUCKET_NAME=your-s3-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1

# CDN Settings
CDN_URL=https://cdn.ecomarga.com
ENABLE_CDN=false

# Custom Domain Settings
CUSTOM_DOMAIN=api.ecomarga.com
ENABLE_CUSTOM_DOMAIN=false

# =================================================================
# NOTES
# =================================================================
# 1. Make sure to change all default passwords and secrets in production
# 2. Keep your .env file secure and never commit it to version control
# 3. Use strong, unique values for JWT secrets (minimum 32 characters)
# 4. Enable SSL/HTTPS in production environments
# 5. Configure proper database backup and monitoring in production
# 6. Review and adjust rate limiting settings based on your needs
# 7. Test email configuration in development before deploying
# 8. Set up proper logging and monitoring for production
# 9. Configure firewall and security groups appropriately
# 10. Regular security audits and dependency updates are recommended