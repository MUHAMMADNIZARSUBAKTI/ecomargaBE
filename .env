# .env - Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:5173

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecomarga
DB_USER=postgres
DB_PASSWORD=postgres


# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_CONNECTION_TIMEOUT=60000
DB_IDLE_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=ecomarga-super-secret-jwt-key-for-development-min-32-characters-long-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=ecomarga-refresh-token-secret-key-for-development-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ecomarga.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Development Settings
DEBUG=true
DEBUG_SQL=false